function rollmsg() {
        nowmsg=document.banner.banner.value
        nowmsg=nowmsg.substring(1,nowmsg.length)+nowmsg.substring(0,1)
        document.banner.banner.value = nowmsg
        bannerid=settimeout("rollmsg()",250) 
}
var bannerid = 0
